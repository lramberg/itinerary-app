<body>
    <nav>
      <a href="/logout">Log Out</a>
      <a href="/members/index">Profile</a>
      <a href="/ports/">All Ports</a>
      <a href="/itineraries">All Itineraries</a>
    </nav>

    <h2>Create a New Itinerary</h2>

    <form action="/itineraries" method="POST">
      <label>Name Your Itinerary</label>
      <input type="text" name="name" placeholder="Itinerary Name" autocomplete="off"><br>
      <label>Add a brief description</label>
      <input type="text" name="description" placeholder="Description" autocomplete="off"><br>
      <button type="submit">Submit</button>
    </form>

</body>
